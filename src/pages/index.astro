---
import MainLayout from '../layouts/main-layout.astro'
import Button from '../components/button.tsx'
import ArrowSec from '../icons/arrow-sec.tsx'
import CallIcon from "../icons/call.tsx"
import Experience from '../components/experience.tsx'

const baseUrl = import.meta.env.BASE_URL || '/'


const services = [
	{
		title: 'Commercial Cleaning',
		text: 'Professional cleaning services for offices and business environments, ensuring a pristine workplace for your team and clients.'
	},
	{
		title: 'Hotel & AirBnb Cleaning',
		text: 'Comprehensive cleaning and maintenance services for hospitality properties, ensuring exceptional guest experiences.'
	},
	{
		title: 'End of Tenancy',
		text: 'Thorough cleaning services when transitioning between tenants, ensuring properties are spotless and ready for new occupants.'
	},
]

const reviews = [
	{
    img: `/natasha.png`,
		name: 'Sarah Johnson',
		location: 'Interland, UK',
		review: 'FCM has transformed our office environment. Their attention to detail and reliability is unmatched in the industry.'
	},
	{
    img: `/benny.png`,
		name: 'Michael Thomas',
		location: 'Young Lives Vs Cancer',
		review: "We've worked with FCM for three years and their commitment to quality cleaning services has been consistently excellent."
	},
	{
    img: `/raymond.png`,
		name: 'Emma Richardson',
		location: 'Perfectly Nested Holiday Future',
		review: "Our holiday properties have never looked better. FCM's cleaning staff are thorough, professional, and always reliable."
	},
]

const projects = [
	{
		img: `/project1.png`,
		name: 'Office Cleaning',
		text: 'Commercial Services'
	},
	{
		img: `/project2.png`,
		name: 'Vacation Rentals',
		text: 'AirBnb Services'
	},
	{
		img: `/project3.png`,
		name: 'Property Maintenance',
		text: 'Commercial Services'
	},
	{
		img: `/project4.png`,
		name: 'End of Tenancy',
		text: 'Residential Services'
	},
]

const clientLogos = [
	{
		img: `/interland_inverted.png`,
		name: 'Interland'
	},
	{
		img: `/ylvsc.png`,
		name: 'Young Lives Vs Cancer'
	},
	{
		img: `/clientLogo3.svg`,
		name: 'Perfectly Nested Holiday Future'
	},
	{
		img: `/clientLogo4.svg`,
		name: 'WoodFell'
	},
	{
		img: `/clientLogo5.svg`,
		name: 'FCM'
	},
]

const experiences = [
	{
		num: 5,
		text:'Years Of Experience'
	},
	{
		num: 20,
		text:'Activate Sites'
	},
	{
		num: 10,
		text:'Active Clients'
	},
	{
		num: 98,
		text:'Client Satisfaction Rate'
	},
]

---

<MainLayout title = 'Facility Cleaning and Maintenance Ltd'>

	<!-- Banner -->
	
	<section class="w-full bg-hero bg-no-repeat bg-cover h-screen lg:min-h-[110vh] px-12 xl:px-0 flex items-center ">
		<div class="lg:max-w-[1200px] w-full mx-auto flex flex-col">
			<h1 class="text-[40px] leading-[50px] md:text-[60px] xl:text-[85px] pb-4 font-dm md:leading-[106.25px] w-full xl:max-w-[70%] text-primary-200"> Professional Cleaning Services for Your Business </h1>
			<p class="text-base md:text-[22px] pb-5 font-jost text-text-gray-200 w-full lg:max-w-[60%]">Creating clean, safe, and welcoming environments through expert care and attention to detail. Reliable, high-quality cleaning and maintenance services for your business.</p>
			<Button text="Get a Quote" href={`/contact`}/>
		</div>
	</section>

	<!-- Services Section -->

	<section class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 lg:flex-row px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between ">
		{
			services.map((service) => {
				return (
					<div class="w-full max-w-[358px] mx-auto flex flex-col justify-center items-center gap-3 md:gap-5">
						<h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{service.title}</h3>
						<p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px] text-center"> {service.text}</p>
						<a href={`/services`} class="text-text-gray-200 leading-snug text-lg tracking-tight font-jost font-semibold gap-2 py-4 md:py-8 startCenter">Read More <ArrowSec /></a>
					</div>
				)
			})
		}
	</section>

	<!-- About Section -->

	<section class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 gap-[75px] pt-[100px] lg:pt-[200px]">
		<div class="flex flex-col gap-8 max-w-[472px] items-center lg:items-start py-6">
			<h2 class="text-[30px] text-center capitalize lg:text-left font-dm tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue ">Committed to Excellence in Cleaning Services</h2>
			<p class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]">At FCM, we understand that a clean environment reflects your business standards. Our professional team delivers consistent, high-quality cleaning and maintenance services tailored to your specific needs.</p>
			<a href="tel:+447366193973" class="group flex gap-4 pt-3 items-center hover:text-primary-200 transition-all duration-300 ease-in-out transform hover:scale-105 hover:translate-x-2">
				<span class="transform transition-transform duration-300 group-hover:scale-110"><CallIcon/></span>
				<p class="flex flex-col text-text-gray-200 font-jost tracking-tight">
					<span class="text-2xl font-bold leading-9 ">+44 7366 193973</span>
					<span class="text-[22px] leading-8">Call Us Today</span>
				</p>
			</a>
      <Button text="Get Free Quote" href={`/contact`}/>
		</div>

		<div>
			<img src={`/about-img.png`} alt="Professional cleaning team" />
		</div>
	</section>

	<!-- Client Testimonials Section -->

	<section class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] ">
	<div class="w-full flex flex-col bg-primary-300 rounded-[48px] px-6 py-[88px]">
		<h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[70%] pb-9 mx-auto">What Our Clients Say About Our Services</h2>
		<div class="flex flex-col gap-8 lg:gap-10 lg:flex-row justify-between">
			<div class="w-full bg-white max-w-[370px] px-[37px] py-[53px] rounded-3xl mx-auto flex flex-col justify-center gap-4 md:gap-6">
				<div class="flex items-center justify-center mb-4">
					<img src=`/interland_inverted.png` alt="Interland logo" class="max-w-[120px]" />
				</div>
				<p class="font-jost tracking-tight leading-8 text-base text-center text-text-gray lg:text-[22px]">FCM has transformed our office environment. Their attention to detail and reliability is unmatched in the industry.</p>
			</div>
			
			<div class="w-full bg-white max-w-[370px] px-[37px] py-[53px] rounded-3xl mx-auto flex flex-col justify-center gap-4 md:gap-6">
				<div class="flex items-center justify-center mb-4">
					<img src=`/ylvsc.png` alt="Young Lives Vs Cancer logo" class="max-w-[120px]" />
				</div>
				<p class="font-jost tracking-tight leading-8 text-base text-center text-text-gray lg:text-[22px]">We've worked with FCM for three years and their commitment to quality cleaning services has been consistently excellent.</p>
			</div>
			
			<div class="w-full bg-white max-w-[370px] px-[37px] py-[53px] rounded-3xl mx-auto flex flex-col justify-center gap-4 md:gap-6">
				<div class="flex items-center justify-center mb-4">
					<img src=`/perfectlynestedholidayfuture.png` alt="Perfectly Nested Holiday Future logo" class="max-w-[120px]" />
				</div>
				<p class="font-jost tracking-tight leading-8 text-base text-center text-text-gray lg:text-[22px]">Our holiday properties have never looked better. FCM's cleaning staff are thorough, professional, and always reliable.</p>
			</div>
		</div>
	</div>
	</section>

	<!-- Our Clients Section -->

	<section class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] ">
		<h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[40px] w-full pb-9 mx-auto">Trusted by Leading Businesses and Charities</h2>
		<div class="w-full flex flex-wrap justify-center gap-8 items-center max-w-[1200px]">
			<div class="flex flex-col items-center">
				<img src=`/interland_inverted.png` alt="Interland logo" class="max-w-[250px] p-4" />
				<span class="text-primary-200 font-bold mt-2">Interland</span>
			</div>
			<div class="flex flex-col items-center">
				<img src=`/ylvsc.png` alt="Young Lives Vs Cancer logo" class="max-w-[250px] p-4" />
				<span class="text-primary-200 font-bold mt-2">Young Lives Vs Cancer</span>
			</div>
			<div class="flex flex-col items-center">
				<img src={`/perfectlynestedholidayfuture.png`} alt="Perfectly Nested Holiday Future logo" class="max-w-[250px] p-4" />
				<span class="text-primary-200 font-bold mt-2">Perfectly Nested Holiday Future</span>
			</div>
			<div class="flex flex-col items-center">
				<img src=`/woodfell_inverted.png` alt="Woodfell logo" class="max-w-[250px] p-4" />
				<span class="text-primary-200 font-bold mt-2">WoodFell</span>
			</div>
		</div>
	</section>

	<!-- Our Services Section -->

	<section class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] ">
		<h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[70%] pb-2 mx-auto">Our Cleaning & Maintenance Services</h2>
		<p class="text-base md:text-[22px] text-center tracking-tight font-jost text-text-gray leading-[33px] lg:max-w-[70%] mx-auto">We provide comprehensive cleaning solutions tailored to your specific business needs. From commercial spaces to hospitality venues, our professional team delivers exceptional results.</p>
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-x-[104px] lg:gap-y-[56px] mt-12 lg:mt-[93px]">
			{
			projects.map((proj) => {
				return (
					<div class="w-full flex flex-col gap-4">
					<img src={proj.img} alt={`${proj.name} service`} />
							<p class="flex flex-col tracking-tight leading-9">
								<span class="text-primary-200 text-lg lg:text-[25px] font-dm">{proj.name}</span>
								<span class="text-text-gray-200 text-base lg:text-lg font-jost">{proj.text}</span>
							</p>
					</div>
			)
		})
		}
		</div>
	</section>

	<!-- Experience Section -->
	<section class="w-full bg-primary-300 px-12 xl:px-0 mx-auto mt-[100px] lg:mt-[200px] py-[151px]">
		<h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[40px] w-full pb-9 mx-auto">FCM By The Numbers</h2>
		<div class="w-full max-w-[1200px] mx-auto flex lg:justify-center items-center overflow-x-scroll no-scrollbar">
			{
				experiences.map((exp, i) => {
					return(
						<Experience text={exp.text} num={exp.num} i={i} client:load />
					)
				})
			}
		</div>
	</section>
</MainLayout>
 

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>
