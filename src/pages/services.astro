const howWeWorkDetails = [
  {
    imgIcon: ServiceIconOne,
    numIcon: One,
    title: 'Assessment & Planning',
    info:'We begin by conducting a thorough assessment of your cleaning needs and developing a customized cleaning plan tailored to your specific requirements.'

  },
  {
    imgIcon: ServiceIconTwo,
    numIcon: Two,
    title: 'Team Deployment',
    info:'Our professional, trained cleaning teams are deployed with all necessary equipment and environmentally-friendly cleaning products to deliver exceptional service.'

  },
  {
    imgIcon: ServiceIconThree,
    numIcon: Three,
    title: 'Quality Assurance',
    info:'We implement comprehensive quality control checks throughout the cleaning process to ensure all areas meet our high standards of cleanliness.'

